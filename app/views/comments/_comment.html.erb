
<div class="p-2 border rounded shadow bg-white text-center" style="min-width: 300px;">
      <% @comments.each do |comment|%>
  <p>
    <strong>Commenter:</strong>
  <%= comment.user.name%>
  </p>

  <p>
    <strong>Comment:</strong>
    <%= comment.body %>
  </p>
  <p>
    <% if comment.user_id ==  @current_user.id%>

    <span class="list-inline-item"><%= link_to "Edit" , edit_post_comment_path(@post,comment.id),class: "btn btn-sm btn-secondary inline"%></span>
    <%= link_to "Delete", [comment.post, comment],class:"btn btn-sm btn-danger", data: {
                  turbo_method: :delete,
                  turbo_confirm: "Are you sure?"
            } %>
  <% end %>
  </p>
  <% end %>
</div>

