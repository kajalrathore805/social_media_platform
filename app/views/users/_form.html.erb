
<div class="container d-flex justify-content-center mt-5">
  <div class="p-4 border rounded shadow bg-white" style="min-width: 400px;">
    <h2 class="text-dark mb-4 text-center">Edit Registration form</h2>

    <%= form_with model: @user  do |form|%>

      <div class="mb-3 text-center">
        <% if user.image.attached?%>
        <%= image_tag user.image ,size:'120x100', class: "rounded-circle w-25"%>
        <% end %>
        <%= form.file_field :image %>
      </div>

      <div class='mb-3'>
        <%= form.label :name%>
        <%= form.text_field :name, class:'form-control'%>
      </div>

      <div class='mb-3'>
        <%= form.label :email%>
        <%= form.email_field :email, class:'form-control'%>
      </div>

      <div class='mb-3'>
        <%= form.label :password%>
        <%= form.password_field :password, class:'form-control'%>
      </div>

      <div class='mb-3'>
        <%= form.label :password_confirmation%>
        <%= form.password_field :password_confirmation, class:'form-control'%>
      </div>

      <div class='mb-3'>
        <%= form.label :bio%>
        <%= form.text_field :bio, class:'form-control'%>
      </div>

      <div class='mb-3'>
        <%= form.label :phone%>
        <%= form.text_field :phone, class:'form-control'%>
      </div>

      <div class="mb-3">
        
      </div>

      <div class='mb-3 text-center'>
        <%= form.submit "submit", class:'btn btn-secondary'%>
      </div>
    <% end %>
    </div>
</div>