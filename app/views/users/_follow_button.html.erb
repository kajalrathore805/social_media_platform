<div class="user-action" style="padding-left: 55%"> 
  <% if  Follow.exists?(user_id: @current_user.id)%>
    <%= link_to  user_follows_path(@current_user.id), data: { turbo_method: :delete}, class:"unfollow-btn btn btn-sm btn-danger" do %>Unfollow
    <% end %>
  <% else %>
    <%= link_to  user_follows_path(@current_user.id), data: { turbo_method: :post}, class:"follow-btn btn btn-sm btn-secondary" do %>follow
    <% end %>
  <% end %>
</div>
